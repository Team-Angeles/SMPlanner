@model Sacrament_Meeting_Planner.Models.Speaker

@{
    ViewData["Title"] = "Speaker";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Speaker">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SpeakerName" class="control-label"></label>
                <input asp-for="SpeakerName" class="form-control" />
                <span asp-validation-for="SpeakerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speaker" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
